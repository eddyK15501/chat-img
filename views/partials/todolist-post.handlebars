<div class="todolist-container">
    <i class="fa-solid fa-xmark"></i>
    <div class="todolist-flex-container">
        <div class="todolist-title-container">
            <h3 id="todolist-title">{{title}}</h3>
        </div>
        <div class="todolist-content-container">
            <p id="todolist-content">{{content}}</p>
        </div>
    </div>
    <i id="checkmark" class="fa-solid fa-check checkmark"></i>
    <span id="created-on">Created on: {{format_date createdAt}}</span>
</div>


