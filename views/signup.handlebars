<div class="signup-header-container">
    <h1>Create a new user</h1>
</div>
<div class="form-main-container">
    <form class="signup-form">
        <div class="form-container">
            <label for="signup-username">Username:</label>
            <input class="input-field" type="text" id="signup-username">
        </div>
        <div class="form-container">
            <label for="signup-email">Email:</label>
            <input class="input-field" type="text" id="signup-email">
        </div>
        <div class="form-container">
            <label for="signup-password">Password:</label>
            <input class="input-field" type="password" id="signup-password">
        </div>
        <div>
            <button class="form-button" type="submit">Sign Up</button>
        </div>
    </form>

    <a class="form-anchor" href="/login">Already got an account?</a>
</div>

<script src="/js/signup.js"></script>